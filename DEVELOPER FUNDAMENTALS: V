# 119 Deleveloper fundamentals

class PlayerCharacter:
    def __init__(self, name, age):
        self.name = name
        self.age = age

    def run(self):
        return (f'Hi sir my name is {self.name} and my old is {self.age}')


player1 = PlayerCharacter('Jason', 33)

print(player1.run())

